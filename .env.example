# Example environment variables for the application
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# Database Configuration
DB_URL=jdbc:h2:file:./data/pfdb;MODE=MSSQLServer;DATABASE_TO_UPPER=false;INIT=CREATE SCHEMA IF NOT EXISTS dbo
DB_USERNAME=magwit
DB_PASSWORD=password

# H2 Console (set to true only in development)
H2_CONSOLE_ENABLED=true

# CORS Configuration (comma-separated list for multiple origins)
# For development:
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:4173,http://127.0.0.1:4173
# For production:
# CORS_ALLOWED_ORIGINS=https://your-production-domain.com

# Spring Profile (use 'dev' for development)
SPRING_PROFILES_ACTIVE=dev
